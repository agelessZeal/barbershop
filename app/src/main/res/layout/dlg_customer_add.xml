<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.odelan.qwork.ui.activity.intro.LoginActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="20dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_title"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/closeIV"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:padding="12dp"/>
    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:paddingStart="20dp"
       android:paddingEnd="20dp"
       android:paddingBottom="30dp"
       android:gravity="center_horizontal">

       <TextView
           android:id="@+id/warningTV"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Please input username"
           android:textSize="13sp"
           android:textColor="#f00"
           android:gravity="center_horizontal"
           android:visibility="gone"/>

       <EditText
           android:id="@+id/usernameET"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:layout_marginTop="5dp"
           android:paddingStart="7dp"
           android:paddingEnd="7dp"
           android:paddingTop="7dp"
           android:paddingBottom="7dp"
           android:hint="Add user to your queue"
           android:background="@drawable/edge_edit_text_background"/>

       <Button
           android:id="@+id/addBtn"
           android:layout_width="wrap_content"
           android:layout_height="45dp"
           android:layout_marginTop="20dp"
           android:text="Add"
           android:textColor="@color/white"
           android:textSize="16sp"
           android:background="@drawable/btn_background"/>
   </LinearLayout>
</LinearLayout>
