<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/photoIV"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_user"
            app:civ_border_color="#FFFF0000"
            app:civ_border_width="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nameTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_103sdp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/_10sdp">
            <Button
                android:id="@+id/allowBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:text="Allow"
                android:textColor="@color/white"
                android:background="@drawable/request_item_btn_corner1"
                android:layout_gravity="center_vertical"/>
            <Button
                android:id="@+id/denyBtn"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:text="Deny"
                android:textColor="@color/white"
                android:background="@drawable/request_item_btn_corner2"
                android:layout_gravity="center_vertical"
                android:layout_alignParentEnd="true"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
