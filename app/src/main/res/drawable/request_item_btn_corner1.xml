<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <gradient android:angle="-90" android:startColor="@color/md_material_blue_600" android:endColor="@color/md_material_blue_600"  />
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="5dip" />
            <gradient android:angle="0" android:startColor="@color/md_material_blue_600" android:endColor="@color/md_material_blue_600" />
        </shape>
    </item>
</selector>